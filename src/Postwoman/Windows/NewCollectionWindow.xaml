<Window x:Class="Postwoman.Windows.NewCollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Postwoman.Windows"
        mc:Ignorable="d"
        Title="New Collection" Height="141" Width="440" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Collection Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Stretch" Margin="10,41,10,37" Text="New collection"/>
        <Button x:Name="OKButton" Content="_OK" IsDefault="True" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="22" Width="100" Click="OKButton_Click"/>
        <Button x:Name="CancelButton" Content="_Cancel" IsCancel="True" HorizontalAlignment="Right" Margin="0,0,115,10" VerticalAlignment="Bottom" Height="22" Width="100"/>
    </Grid>
</Window>
